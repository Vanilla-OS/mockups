using Gtk 4.0;
using Adw 1;

Adw.Window {
  default-width: 600;
  default-height: 600;
  title: "Vanilla OS Rollback";
  
  Box {
    orientation: vertical;
    
    Adw.HeaderBar {
      styles [
        "flat"
      ]
    }
  
    Adw.StatusPage {
      title: _("Rollback Complete");
      description: _("The update has been reverted.");
      icon-name: "check-round-outline-symbolic";
      valign: center;
      vexpand: true;
      hexpand: true;
    }
  }
}